<%- include('../partials/head') %>
<h1>VRAAG 3</h1>
<form action="/vraag4" method="post" id="vraag3">
    <fieldset>
        <legend>Geef de Minor Web een cijfer:</legend>
        
        <% if (parsedData.minorcijfer) { %>
        <label>Cijfer van 1 tot 10<input name="minorcijfer" type="text" inputmode="numeric" pattern="^(?:[1-9]|0[1-9]|10)$" value="<%= parsedData.minorcijfer %>" required></label>
        <% } else { %>
        <label>Cijfer van 1 tot 10<input name="minorcijfer" type="text" inputmode="numeric" pattern="^(?:[1-9]|0[1-9]|10)$" required></label>
        <% } %>

    </fieldset>
    <nav>
        <ul>
            <a href="/vraag2?studentnummer=<%= studentnummer %>">Terug</a>
            <input form="vraag3" type="submit" value="Verder">
        </ul>
    </nav>
    <input type="hidden" name="state" value=3>
    <input type="hidden" name="studentnummer" value=<%= studentnummer %>>
</form>
<section id="progressInfo">
    <label for="voortgang">Vraag 3 van 10</label>
    <progress id="voortgang" max="100" value="30">30%</progress>
</section>
<%- include('../partials/foot') %>