<%- include('../partials/head') %>
<h1>VRAAG 4</h1>
<form action="/vraag5" method="post" id="vraag4">
    <fieldset>
        <legend>Wat vond je van de communicatie op Slack? *</legend>
        <% if (parsedData.vraag4 == 'Slecht') { %>
        <input id="vraag1" value="Slecht" type="radio" name="vraag4" checked required aria-describedby="verplicht-beschrijving">
        <% } else { %>
        <input id="vraag1" value="Slecht" type="radio" name="vraag4" required aria-describedby="verplicht-beschrijving">
        <% } %>
        <label for="vraag1" class="radioButton">Slecht</label>

        <% if (parsedData.vraag4 == 'Liever iets anders') { %>
        <input id="vraag2" value="Liever iets anders" type="radio" name="vraag4" checked aria-describedby="verplicht-beschrijving">
        <% } else { %>
        <input id="vraag2" value="Liever iets anders" type="radio" name="vraag4" aria-describedby="verplicht-beschrijving">
        <% } %>
        <label for="vraag2" class="radioButton">Liever iets anders</label>

        <% if (parsedData.vraag4 == 'Wel handig') { %>
        <input id="vraag3" value="Wel handig" type="radio" name="vraag4" checked aria-describedby="verplicht-beschrijving">
        <% } else { %>
        <input id="vraag3" value="Wel handig" type="radio" name="vraag4" aria-describedby="verplicht-beschrijving">
        <% } %>
        <label for="vraag3" class="radioButton">Wel handig</label>
        
        <% if (parsedData.vraag4 == 'Super!') { %>
        <input id="vraagx" value="Super!" type="radio" name="vraag4" checked aria-describedby="verplicht-beschrijving">
        <% } else { %>
        <input id="vraagx" value="Super!" type="radio" name="vraag4" aria-describedby="verplicht-beschrijving">
        <% } %>
        <label for="vraagx" class="radioButton">Super!</label>
        
    </fieldset>
    <%- include('../partials/verplicht') %>

    <nav>
        <ul>
            <a href="/vraag3?studentnummer=<%= studentnummer %>">Terug</a>
            <input form="vraag4" type="submit" value="Verder">
        </ul>
    </nav>
    <input type="hidden" name="state" value=4>
    <input type="hidden" name="studentnummer" value=<%= studentnummer %>>
</form>
<section id="laterverder">
    <label for="link">Later verder gaan? Gebruik deze link:</label>
    <input id="link" type="text" readonly value="http://localhost:3000/laterverder?studentnummer=<%= studentnummer %>">
</section>
<section id="progressInfo">
    <label for="voortgang">Vraag 4 van 10</label>
    <progress id="voortgang" max="100" value="40">40%</progress>
</section>
<%- include('../partials/foot') %>